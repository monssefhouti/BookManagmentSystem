@inject SignInManager<CustomUser> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookManagment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#035cca">
            <div class="container">
                <a class="navbar-brand text-warning" asp-area="">Dashboard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-house-user"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Books" asp-action="Index">
                                <i class="fas fa-book"></i>
                                Books
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Authors" asp-action="Index">
                                <i class="fas fa-feather"></i>
                                Authors
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="navbar-nav dropdown">
                                <a class="dropdown-toggle btn btn-outline-warning" data-toggle="dropdown" href="" role="button">@User.Identity.Name</a>
                                <div class="dropdown-menu">
                                    <a href="" class="dropdown-item">
                                        <i class="far fa-id-badge"></i>
                                        Profil
                                    </a>
                                    <a href="" class="dropdown-item">
                                        <i class="fas fa-users-cog"></i>
                                        Users Management
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <div>
                                        <ul class="navbar-nav">
                                            <li class="nav-item">
                                                <form method="post" asp-action="Logout" asp-controller="Accounts">
                                                    <button type="submit" class="btn btn-danger" style="width:15em;">
                                                        <i class="fas fa-sign-out-alt"></i>
                                                        Sign out
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#035cca">
        <div class="container text-white">
            &copy; 2021 - BookManagment - <a asp-controller="Home" asp-action="Privacy" class="text-warning">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/font-awesome/js/all.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
