@model IEnumerable<BookManagment.Models.Entities.Books>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="alert alert-warning text-center text-danger">BOOKS PAGE</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fas fa-plus-circle"></i>
        Add New Book
    </a>
</p>
<table class="table table-bordered text-center text-white">
    <thead>
        <tr>
            <th class="text-warning">
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th class="text-warning">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th width="50" class="text-warning">
                @Html.DisplayNameFor(model => model.PageNumber)
            </th>
            <th class="text-warning">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th class="text-warning">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th width="250" class="text-warning">
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th width="250" class="text-warning">
                <i class="fas fa-wrench"></i>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageNumber)
            </td>
            <td>
                @if(item.ImageUrl!=null)
                {
                    <img src="~/Upload/@item.ImageUrl" class="img-thumbnail" width="100" height="100"/>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                    <i class="fas fa-pencil-alt"></i>
                </a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                    <i class="fas fa-info"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                    <i class="fas fa-eraser"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
